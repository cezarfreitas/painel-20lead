# LeadHub Production Environment Variables

# Database Configuration (REQUIRED)
MYSQL_DB=mysql://leadhub:strong_password@mysql:3306/leadhub

# MySQL Database Settings
MYSQL_ROOT_PASSWORD=very_strong_root_password
MYSQL_DATABASE=leadhub
MYSQL_USER=leadhub
MYSQL_PASSWORD=strong_production_password

# Application Settings
NODE_ENV=production
PORT=80

# Optional: Enable specific features
# DEBUG=false
# LOG_LEVEL=info

# Security (if implementing authentication)
# JWT_SECRET=your_super_secret_jwt_key
# SESSION_SECRET=your_session_secret

# External Services (if needed)
# SMTP_HOST=smtp.yourprovider.com
# SMTP_PORT=587
# SMTP_USER=your_email@domain.com
# SMTP_PASS=your_email_password
