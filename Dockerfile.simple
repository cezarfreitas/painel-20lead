# Simple LeadHub Dockerfile for debugging
FROM node:18-alpine

WORKDIR /app

# Copy everything
COPY . .

# Install dependencies
RUN npm install

# Build
RUN npm run build

# Set environment
ENV NODE_ENV=production
ENV PORT=80

EXPOSE 80

# Simple health check
HEALTHCHECK CMD curl -f http://localhost:80/api/health || exit 1

# Start
CMD ["npm", "start"]
