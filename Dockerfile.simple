# LeadHub Simple Working Dockerfile
FROM node:18-alpine

WORKDIR /app

# Install global tools
RUN npm install -g tsx

# Copy everything
COPY . .

# Install dependencies
RUN npm install --legacy-peer-deps

# Try to build, but don't fail if it doesn't work
RUN npm run build || echo "Build step failed, will run from source"

# Set environment
ENV NODE_ENV=production
ENV PORT=80

EXPOSE 80

# Simple start command that works
CMD ["npx", "tsx", "server/production.ts"]
